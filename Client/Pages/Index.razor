@page "/"
@page "/index"
@inject IDealRepository dealsRepo



<div>
    <h3>Popular</h3>
    <DealsList Deals="PopularDeals" />
</div>

<div>
    <h3>Upcoming Deals</h3>
    <DealsList Deals="UpcomingDeals" />
</div>

@code{
    private List<Deal> PopularDeals = new List<Deal>();
    private List<Deal> UpcomingDeals = new List<Deal>();
    protected async override Task OnInitializedAsync()
    {
        var response = await dealsRepo.GetIndexPageDTO();
        PopularDeals = response.PopularDeals;
        UpcomingDeals= response.UpcomingDeals;
    }
}
